{
    "name": "forge-php/forge",
    "description": "Forge CLI.",
    "keywords": ["console", "cli"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/forge-php/forge/issues",
        "source": "https://github.com/forge-php/forge"
    },
    "authors": [
        {
            "name": "Ashan Ghimire",
            "email": "ashanghimire10@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "forge/plugin-pimcore": "dev-main",
        "forge/plugin-vuejs": "dev-main",
        "illuminate/http": "^11.15",
        "illuminate/translation": "^11.15",
        "illuminate/validation": "^11.15",
        "laravel-zero/framework": "^11.0.0",
        "laravel/prompts": "^0.1.24",
        "nikic/php-parser": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.15.2",
        "mockery/mockery": "^1.6.11",
        "pestphp/pest": "^2.34.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Forge\\": "lib/",
            "Forge\\Plugins\\": "plugins/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["application"],
    "repositories": {
        "dev": {
            "type": "path",
            "url": "./plugins/*/*",
            "options": {
                "symlink": true
            }
        }
    }
}
